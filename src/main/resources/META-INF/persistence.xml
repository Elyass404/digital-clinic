<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="clinicdigitalPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entities (weâ€™ll create them later) -->
        <class>com.clinicdigital.model.Department</class>
        <class>com.clinicdigital.model.Doctor</class>
        <class>com.clinicdigital.model.Patient</class>
        <class>com.clinicdigital.model.Room</class>
        <class>com.clinicdigital.model.Consultation</class>

        <properties>
            <!-- Database Connection -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/clinicdigital_db?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- Hibernate Settings -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
